<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Meal Planning App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="container">
        <div class="page-header">
            <h1><%= title %></h1>
            <a href="/mealplans/new" class="btn btn-primary">Create New Meal Plan</a>
        </div>

        <% if (mealPlans.length === 0) { %>
            <div class="empty-state">
                <h2>No Meal Plans Found</h2>
                <p>Start by creating your first meal plan!</p>
                <a href="/mealplans/new" class="btn btn-primary">Create Meal Plan</a>
            </div>
        <% } else { %>
            <div class="meal-plan-grid">
                <% mealPlans.forEach(plan => { %>
                    <div class="meal-plan-card">
                        <div class="card-header">
                            <h3><%= plan.name %></h3>
                            <span class="date"><%= new Date(plan.date).toLocaleDateString('vi-VN') %></span>
                        </div>
                        
                        <div class="card-body">
                            <div class="nutrition-summary">
                                <div class="nutrition-item">
                                    <span class="label">Total Calories</span>
                                    <span class="value"><%= plan.totalCalories %> kcal</span>
                                </div>
                                <div class="nutrition-item">
                                    <span class="label">Target</span>
                                    <span class="value"><%= plan.targetCalories %> kcal</span>
                                </div>
                            </div>
                            
                            <div class="macros">
                                <div class="macro">
                                    <span class="macro-label">Protein</span>
                                    <span class="macro-value"><%= plan.totalMacros.protein %>g</span>
                                </div>
                                <div class="macro">
                                    <span class="macro-label">Carbs</span>
                                    <span class="macro-value"><%= plan.totalMacros.carbs %>g</span>
                                </div>
                                <div class="macro">
                                    <span class="macro-label">Fat</span>
                                    <span class="macro-value"><%= plan.totalMacros.fat %>g</span>
                                </div>
                            </div>
                            
                            <div class="meals-count">
                                <span><%= plan.meals.length %> meals planned</span>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <a href="/mealplans/<%= plan.id %>" class="btn btn-secondary">View Details</a>
                            <form action="/mealplans/<%= plan.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this meal plan?')">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </main>

    <%- include('partials/footer') %>
</body>
</html>

